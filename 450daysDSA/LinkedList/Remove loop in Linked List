/*
class Node
{
    int data;
    Node next;
}
*/

class Solution
{
    //Function to remove a loop in the linked list.
    public static void removeLoop(Node head){
        if(head==null || head.next==null) return;
        Node slow = head;
        Node fast = head;
        Node prev = head;
        while(fast.next!=null && fast.next.next!=null){
            fast = fast.next.next;
            prev = slow;
            slow = slow.next;
            if(slow == fast){
               break;
            }
        }
        if(fast.next==null || fast.next.next==null) return;
        if(head==slow){
            prev.next = null;
            return;
        }
        slow = head;
        while(fast.next!=slow.next){
            fast = fast.next;
            slow = slow.next;
        }
        fast.next = null;
        return;
    }
}